<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calcActivity2">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/edtinput"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnc"
        android:text="C"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/edtinput"/>

    <ImageButton
        android:id="@+id/btnback"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtinput"
        android:layout_toRightOf="@id/btnc"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_baseline_backspace_24"
        android:textSize="20dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnmodule"
        android:text="%"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/edtinput"
        android:layout_toRightOf="@+id/btnback"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btndivision"
        android:text="/"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/edtinput"
        android:layout_toRightOf="@+id/btnmodule"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn1"
        android:text="1"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btnc"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn2"
        android:text="2"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btnc"
        android:layout_toRightOf="@id/btn1"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn3"
        android:text="3"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btnc"
        android:layout_toRightOf="@id/btn2"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnmulti"
        android:text="*"
        android:backgroundTint="@color/black"
        android:textSize="30dp"
        android:layout_below="@+id/btnc"
        android:layout_toRightOf="@id/btn3"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn4"
        android:text="4"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btn1"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn5"
        android:text="5"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@id/btn4"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn6"
        android:text="6"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@id/btn5"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnsub"
        android:text="-"
        android:backgroundTint="@color/black"
        android:textSize="30dp"
        android:layout_below="@+id/btnmulti"
        android:layout_toRightOf="@id/btn6"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn7"
        android:text="7"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btn4"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn8"
        android:text="8"
        android:backgroundTint="@color/purple_200"
        android:textSize="30dp"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@id/btn7"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn9"
        android:text="9"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@id/btn8"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnadd"
        android:text="+"
        android:backgroundTint="@color/black"
        android:textSize="30dp"
        android:layout_below="@+id/btnsub"
        android:layout_toRightOf="@id/btn9"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btndot"
        android:text="."
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/btn7" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btn0"
        android:text="0"
        android:backgroundTint="@color/purple_200"
        android:textSize="25dp"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@id/btndot"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btnequl"
        android:text="="
        android:backgroundTint="@color/purple_200"
        android:textSize="30dp"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@id/btn0"/>

</RelativeLayout>